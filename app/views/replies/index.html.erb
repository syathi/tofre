<div class="font-default">
<p id="notice"><%= notice %></p>

<h1>リプライリスト</h1>

<table>
  <thead>
    <tr>
      <th>冷蔵庫</th>
      <th>利用者</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.refrigerator %></td>
        <td><%= reply.user %></td>
        <td><%= reply.content %></td>
        <td><%= link_to '詳細', reply %></td>
        <td><%= link_to '編集', edit_reply_path(reply) %></td>
        <td><%= link_to '削除', reply, method: :delete, data: { confirm: 'いいんですか？消しますよ？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規リプライ', new_reply_path %>
</div>