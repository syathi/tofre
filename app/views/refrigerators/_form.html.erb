<%= form_for(@refrigerator) do |f| %>
  <% if @refrigerator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@refrigerator.errors.count, "error") %> 保存に失敗しました。:</h2>

      <ul>
      <% @refrigerator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
  </div>

  <div class="field">
    <%= f.label :name, "材料名" %><br>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :quantity, "数量" %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :deadline, "賞味期限・消費期限の有無" %><br>
    <% if @linenil %>
      <%= check_box_tag "line", true, true %>消費期限なし</p>
    <% else %>
      <%= check_box_tag "line" %>消費期限なし</p>
    <% end %>
    <%= f.date_select :deadline %>
  </div>

  <div class="actions">
    <% if current_page?(new_refrigerator_path) %>
      <%= f.submit "材料を追加する"%>
    <% else %>
      <%= f.submit "冷蔵庫の更新"%>
    <% end %>
  </div>
<% end %>
